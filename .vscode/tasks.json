{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "gcc build",
      "command": "gcc",
      "args": [
        "-g",
        "main.c",
        "-o",
        "main.exe",
        "-I${env:MINGW_PATH}/vendor/libpng",
        "-L${env:MINGW_PATH}/vendor/libpng",
        "-lpng",
        "-lz"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "g++ build",
      "command": "g++",
      "args": [
        "-O3",
        "-static",
        "-g",
        "main.cpp",
        "-o",
        "main.exe",
        "-I${env:MINGW_PATH}/vendor/png++",
        "-I${env:MINGW_PATH}/vendor/libpng",
        "-L${env:MINGW_PATH}/vendor/libpng",
        "-lpng",
        "-lz"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}
