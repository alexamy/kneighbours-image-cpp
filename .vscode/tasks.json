{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++.exe build active file",
      "command": "g++",
      "args": [
        "-O3",
        "-static",
        "-g",
        "main.cpp",
        "-o",
        "kmeans-png.exe",
        "-I/c/mingw64/vendor/png++",
        "-I/c/mingw64/vendor/libpng",
        "-L/c/mingw64/vendor/libpng",
        "-lpng",
        "-lz"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
